/[if !IE]>
%html{lang: 'en', class: 'no-js'}
  /<![endif]
  %head
    %title #{data.page.title || "Azure Construction"}
    %meta(http-equiv="content-type" content="text/html" charset="utf-8")
    %meta(http-equiv="x-ua-compatible" content="ie=edge,chrome=1")
    %meta(name="description" content="Azure Construction website")
    %meta(name="author" content="cbg")
    
    -# Stylesheets
    = stylesheet_link_tag  '//cdn.jsdelivr.net/normalize/3.0.2/normalize.min.css'
    = stylesheet_link_tag  '//cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css'
    = stylesheet_link_tag 'application'
  %body{class: current_page.data.body_class || 'page'}
    .container
      %header#page-header
        %h3.u-pull-left Azure Construction and Landscaping
        %nav.u-pull-right
          %ul
            %li
              %a.scroll{:href => "#about-us"} About Us
            %li
              %a.scroll{:href => "#projects"} Project Gallery
            %li
              %a.scroll{:href => "#contact-form"} Contact
    = yield
    
    -# Javascripts
    = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/modernizr/2.7.1/modernizr.min.js'
    = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js'
    = javascript_include_tag 'application'

